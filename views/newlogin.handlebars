<form method="post" action="/newlogin">
    <fieldset>
        <legend>Sign in</legend>

        <div>
            <label for="username">Username:</label>
            <input type="text" id="screenName" name="screenName" required />
        </div>

        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" minlength="4" required placeholder="8 characters minimum" />
        </div>

        <div>
            <label for="firstname">Birthday:</label>
            <input type="date" id="birthday" name="birthday" required />
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required />
        </div>

        <input type="submit" value="Sign in">

    </fieldset>
</form>

<p>{{error}}</p>
